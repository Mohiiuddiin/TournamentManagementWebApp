@model IEnumerable<TournamentManagementWebApp.Models.Team>

@{
    ViewBag.Title = "Teams";
}

<h2 class="btn btn-lg btn-success btn-outline-dark" style="width:50%;font-weight:bold;color:azure">All Existing Team Information</h2>

<table class="table table-striped table-dark" id="example" style="width:100%">
    <thead>
        <tr style="color: seagreen">
            <th>
                @Html.DisplayNameFor(model => model.TeamNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchSlot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhatsAppGroup)
            </th>
            @*<th></th>*@
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamNumber)
                </td>
                <td>
                    <button class="btn btn-dark btn-outline-light" style="color:seagreen;font-weight:bold">@Html.DisplayFor(modelItem => item.TeamName)</button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimaryNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondaryNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatchSlot)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatchDate)
                </td>
                <td>
                    <a class="btn btn-success" href="@Html.DisplayFor(modelItem => item.WhatsAppGroup)">Join WhatsApp Group</a>
                </td>
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>*@
            </tr>
        }
    </tbody>
    

</table>


